<% provide(:title, "Login") %>

<h1>login</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'error_messages' %>
      
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "login", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>